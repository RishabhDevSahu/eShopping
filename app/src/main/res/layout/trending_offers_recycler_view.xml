<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:id="@+id/trend_offer_cardView"
            android:layout_width="130dp"
            android:layout_height="120dp"
            android:layout_margin="10dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/trend_offer_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/eshoppinglogo" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Slippers"
                android:id="@+id/trend_offer_name"
                android:textColor="#000000"
                android:textStyle="bold"
                android:breakStrategy="simple"
                android:textSize="15dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:text="50% off"
                android:id="@+id/trend_offer_discount"
                android:textColor="#5FA80A"
                android:textStyle="bold"
                android:breakStrategy="simple"
                android:textSize="13dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:text="Great Savings!"
                android:id="@+id/trend_offer_description"
                android:textColor="#4E504C"
                android:textStyle="bold"
                android:breakStrategy="simple"
                android:textSize="13dp"/>


        </LinearLayout>

    </LinearLayout>

</LinearLayout>

